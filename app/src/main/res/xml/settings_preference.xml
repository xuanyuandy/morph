<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:defaultValue="2"
        android:entries="@array/pref_resolution_array"
        android:entryValues="@array/pref_resolution_value"
        android:key="@string/pref_resolution_key"
        android:summary="@string/pref_resolution_summary"
        android:title="@string/resolution" />
    <ListPreference
        android:defaultValue="3"
        android:entries="@array/pref_frames_array"
        android:entryValues="@array/pref_frames_value"
        android:key="@string/pref_frames_key"
        android:summary="@string/pref_frames_summary"
        android:title="@string/frame_count" />
    <ListPreference
        android:defaultValue="1000"
        android:entries="@array/pref_delay_array"
        android:entryValues="@array/pref_delay_array"
        android:key="@string/pref_trans_delay_key"
        android:summary="@string/pref_delay_summary"
        android:title="@string/animation_delay" />
    <PreferenceCategory android:title="@string/gif_output_settings">
        <ListPreference
            android:defaultValue="2"
            android:entries="@array/pref_quantizer_array"
            android:entryValues="@array/pref_quantizer_value"
            android:key="@string/pref_quantizer_key"
            android:summary="@string/pref_quantizer_summary"
            android:title="@string/gif_encode_quantizer" />
        <ListPreference
            android:defaultValue="0"
            android:entries="@array/pref_ditherer_array"
            android:entryValues="@array/pref_ditherer_value"
            android:key="@string/pref_ditherer_key"
            android:summary="@string/pref_ditherer_summary"
            android:title="@string/gif_encode_ditherer" />
    </PreferenceCategory>
</PreferenceScreen>